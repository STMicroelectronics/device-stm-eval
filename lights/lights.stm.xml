<!--
Set association Android Id and Light device (/sys/class/leds/...).
	LIGHT_ID_BACKLIGHT
	LIGHT_ID_KEYBOARD
	LIGHT_ID_BATTERY
	LIGHT_ID_NOTIFICATIONS
	LIGHT_ID_ATTENTION
	LIGHT_ID_BLUETOOTH
	LIGHT_ID_WIFI

Define color value "rgb" (capability to set color value with RGB parameter),
	or color value "mono" otherwise
-->

<lightshal>

	<device name="notifications" device="red" color="mono">
	</device>

	<device name="attention" device="heartbeat" color="mono">
	</device>

<!--
Create stub lights for others (only to avoid unecessary logs)
-->

	<device name="backlight" device="stub" color="mono">
	</device>

	<device name="keyboard" device="stub" color="mono">
	</device>

	<device name="buttons" device="stub" color="mono">
	</device>

	<device name="battery" device="stub" color="mono">
	</device>

	<device name="bluetooth" device="stub" color="mono">
	</device>

	<device name="wifi" device="stub" color="mono">
	</device>


</lightshal>
